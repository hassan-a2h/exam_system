<div class="card m-2">
  <h5 class="card-header">MCQ</h5>
  <div class="card-body">
    <%= f.label :question %>
    <%= f.text_field :question, required: true %> <br>

    <%= f.label :option_1 %>
    <%= f.text_field :option1, required: true %> <br>

    <%= f.label :option_2 %>
    <%= f.text_field :option2, required: true %> <br>

    <%= f.label :option_3 %>
    <%= f.text_field :option3, required: true %> <br>

    <%= f.label :option_4 %>
    <%= f.text_field :option4, required: true %> <br>

    <%= f.label :correct_option %>
    <%= f.select :correct_option, [1, 2, 3, 4]%> <br>

    <%= f.label :marks %>
    <%= f.number_field :marks, in: 1..10 %> <br>

    <br>
    <% f.hidden_field :_destroy %>
    <%= link_to 'Remove', '#', class: 'remove-fields btn btn-danger ml-auto' %>

  </div>
</div>
