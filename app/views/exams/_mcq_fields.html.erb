<div class="card m-2">
  <h5 class="card-header">MCQ</h5>
  <div class="card-body">
    <%= f.label :question %>
    <%= f.text_field :question %> <br>

    <%= f.label :option_1 %>
    <%= f.text_field :option1 %> <br>

    <%= f.label :option_2 %>
    <%= f.text_field :option2 %> <br>

    <%= f.label :option_3 %>
    <%= f.text_field :option3 %> <br>

    <%= f.label :option_4 %>
    <%= f.text_field :option4 %> <br>

    <%= f.label :correct_option %>
    <%= f.text_field :correct_option %> <br>

    <%= f.label :marks %>
    <%= f.number_field :marks, in: 1..10 %> <br>
  </div>
</div>
