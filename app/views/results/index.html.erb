<h1> Results </h1>

<% if @results.blank? %>
  <p> No results found </p>

<% else %>
  <table>
    <tr>
      <th> Student </th>
      <th> Exam </th>
      <th> Subject </th>
      <th> Marks </th>
      <th> Action </th>
    </tr>

    <% i = 0 %>
    <% @results&.each do |result| %>
      <tr>
        <td> <%= result.student.name %> </td>
        <td> <%= result.exam.title %> </td>
        <td> <%= result.exam.subject.name %> </td>
        <td> <%= result.obtained_marks %> / <%= result.total_marks %> </td>
        <td> <%= link_to 'Details', result, class: 'btn btn-primary' %> </td>
      </tr>
      <% i += 1 %>
    <% end %>
  </table>
<% end %>

