<h1>Edit User</h1>

<% if current_user.errors.any? %>
  <% current_user.errors.full_messages.each do |error| %>
    <p class='alert alert-danger'> <%= error %> </p>
  <% end %>
<% end %>

<%= form_with model: @user, url: user_path, method: :patch, local: true do |f| %>

  <%= f.label :picture %> <br>
  <%= f.file_field :picture %> <br>

  <br>
  <%= f.submit %>
<% end %>
